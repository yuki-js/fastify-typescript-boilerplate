{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["types", "node_modules/@types"],
    "resolveJsonModule": true,
    "composite": true,
    
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
