{
  "name": "fastify-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Node.js boilerplate using fastify & TypeScript",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsc",
    "start": "node build",
    "dev": "nodemon | pino-pretty --colorize",
    "pretest": "npm run build",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yonathan06/fastify-typescript-boilerplate.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "nodejs",
    "fastify",
    "typescript"
  ],
  "author": "Yonatan Bendahan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yonathan06/fastify-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/yonathan06/fastify-typescript-boilerplate#readme",
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.0",
    "@types/http-errors": "^1.8.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "pino-pretty": "^7.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.7",
    "@sinclair/typebox": "^0.23.2",
    "env-schema": "^3.5.1",
    "fastify": "^3.25.3",
    "fastify-now": "^2.5.2",
    "http-errors": "^2.0.0",
    "ts-node": "^10.4.0"
  }
}
